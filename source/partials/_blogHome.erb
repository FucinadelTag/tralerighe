<% blog.articles[0...1].each do |article| %>
    <section class="title-container clearfix" style="background: url(<%= article.data.image %>) center no-repeat; background-size: cover;">
        <div class="float-left">
            <div class="row">
                <div class="small-12 columns title">
                    <h1>
                        <a href="<%= article.url %>">
                            <%= article.title %><br class="show-for-large-up">
                        </a>
                    </h1>
                    <time><%= article.date.strftime('%b %e %Y') %></time>
                    <p>
                        <%= article.data.summary %> | <a href="<%= article.url %>">Leggi tutto</a>
                    </p>


                </div>
            </div>

        </div>
    </section>
<% end %>
<div class="row">

    <div class="small-12 medium-12 large-10 columns">
        <div class="row align-stretch">
            <% blog.articles[1...50].each do |article| %>
                 <% if article.title  %>
                    <div class="small-12 medium-12 large-6 columns">
                      <article>
                        <% link_to article do %>
                            <%= tag :img, :src => article.data.image, :title => article.title %>
                        <% end %>

                        <h3>
                          <a href="<%= article.url %>"><%= article.title %></a>
                        </h3>
                        <time><%= article.date.strftime('%b %e %Y') %></time>
                        <p><%= article.data.summary %></p>
                        <a href="<%= article.url %>">Leggi tutto</a>
                      </article>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
    <%= partial "partials/aside" %>
</div>
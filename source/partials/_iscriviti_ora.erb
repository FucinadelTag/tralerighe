<section class="iscriviti">
    <div id="iscriviti">
        <div class="evidenza">
            <span><i class="fa fa-book" aria-hidden="true"></i> ISCRIVITI ORA E RISPARMIA</span>
        </div>

    </div>
    <div class="row">
        <div class="small-12 medium-12 columns">



            <div class="row align-middle">
                <div class="small-7 columns">
                    <h3 class="subheader">Con un piccolo acconto di <span class="prezzo center">€150,00</span> ottieni:</h3>

                    <div class="row">
                        <div class="columns">
                            <h5>
                                <i class="fa fa-money"></i> Il prezzo scontato del <%= precentuale_sconto %>%
                            </h5>
                            <h5>
                                <i class="fa fa-check"></i> Un posto assicurato <i>(Solo <%= posti %> posti disponibili!)</i>
                            </h5>
                            <h5>
                                <i class="fa fa-user"></i> Pagamenti rateali
                            </h5>

                        </div>
                    </div>
                </div>
                <div class="small-5 columns">
                    <p class="center">
                        <button
                            class="ctaButton button snipcart-add-item"
                            data-item-id="<%= id_corso %>"
                            data-item-name="<%= titolo_corso %>"
                            data-item-price="150.00"
                            data-item-url="https://www.tralerighelab.it<%= current_page.url %>"
                            data-item-description="<%= descrizione_corso %>">
                                Prenota adesso con €150!
                        </button>
                        <br><span class="subheader" ><%= testo_rate %></span>
                    </p>
                </div>

            </div>
    </div>
</section>
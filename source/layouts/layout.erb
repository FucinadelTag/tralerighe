<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Manichini per Addestramento BLS-D RCP - Sconto 35%" %></title>

    <meta name="description" content="<%= current_page.data.description || "Descrizione da inserire" %>" />

    <%= stylesheet_link_tag "style" %>

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <link rel="icon" href="/images/cropped-LOGO_tlr-32x32.png" sizes="32x32" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/2.1.0/js.cookie.min.js"></script>


    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

    <%= stylesheet_link_tag :site %>
    <%= javascript_include_tag :all %>
  </head>

  <body class="<%= page_classes %>">

    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-19846103-33', 'auto');
        ga('send', 'pageview');

    </script>

    <div class="row">
        <div class="top-bar">
            <div class="top-bar-left">
                <ul class="menu">
                    <li class="menu-text"><a href="/"><img src="https://prismic-io.s3.amazonaws.com/tralerighe/5e235b6dfcc30eab38f330c7c2b89ab83029b11d_logo_tralerighe_lab.jpg"></a></li>
                </ul>
            </div>
        </div>
    </div>

    <section class="title-container show-for-medium" style="background: url(<%= current_page.data.immagineTestata %>) center no-repeat; background-size: cover;">
            <div class="row clearfix">
                <div class="title float-center">
                    <h1 class="big">
                        <% if current_page.data.testata.prima_riga != ''  %>
                            <%= current_page.data.testata.prima_riga %>
                        <% end %>
                    </h1>
                    <span class="medium">
                        <% if current_page.data.testata.seconda_riga != ''  %>
                            <%= current_page.data.testata.seconda_riga %><br />
                        <% end %>
                    </span>

                    <% if current_page.data.testata.hasButton != 0  %>
                        <span>
                            <%= partial "partials/callToAction" %>
                        </span>
                    <% end %>
                </div>
            </div>
    </section>

    <section class="title-container show-for-small-only">
            <div class="row clearfix">
                <div class="title float-center">
                    <span class="title-mobile">
                        <% if current_page.data.testata.prima_riga != ''  %>
                            <%= current_page.data.testata.prima_riga %>
                        <% end %>
                    </span>
                    <img src="<%= current_page.data.immagineTestata %>">
                    <br><br>
                    <% if current_page.data.testata.hasButton != 0  %>
                        <span class="show-for-medium">
                            <%= partial "partials/callToAction" %>
                        </span>
                    <% end %>
                </div>
            </div>
    </section>


    <%= yield %>

    <%= partial "partials/footer" %>

    <%= javascript_include_tag  "all" %>


    <% if current_page.data.conversionCode  %>
        <%= current_page.data.conversionCode %>
    <% end %>

  </body>
</html>
